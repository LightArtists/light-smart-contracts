{
  "name": "light-ethereum-contracts",
  "version": "1.0.0a",
  "description": "This contract has reusable functions and is meant to be deployed multiple times to accommodate different Light collections.",
  "main": "contracts/Light.sol",
  "author": "William Entriken",
  "license": "Apache-2.0",
  "private": false,
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "compile": "hardhat compile",
    "//": "COVERAGE DOESN'T WORK YET",
    "coverage": "hardhat coverage --config ./hardhat-coverage.config.js --solcoverjs ./config/.solcover.js",
    "lint:check": "yarn lint:check:format && yarn lint:check:solhint && yarn lint:check:eslint",
    "lint:check:format": "prettier --check **.{sol,js}",
    "lint:check:solhint": "yarn build && solhint --config ./config/.solhint.json --ignore-path ./config/.solhintignore contracts/**/*.sol",
    "lint:check:eslint": "eslint . --ext js",
    "lint:fix": "yarn lint:fix:format && yarn lint:fix:eslint",
    "lint:fix:format": "prettier --write **.{sol,js}",
    "lint:fix:eslint": "eslint --fix . --ext js",
    "prepare": "env COMPILE_MODE=production yarn run compile",
    "test": "hardhat test",
    "gas-report": "env ENABLE_GAS_REPORT=true yarn run test",
    "solidity-coverage": "^0.7.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "chai": "^4.2.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.0",
    "hardhat": "^2.9.9",
    "eslint": "^7",
    "eslint-config-standard": "^16",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-mocha-no-only": "^1.1.0",
    "eslint-plugin-node": "^11",
    "eslint-plugin-promise": "^5",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-config-prettier": "^8.3.0",
    "merkletreejs": "^0.2.23",
    "prettier": "^2.3.0",
    "prettier-plugin-solidity": "^1.0.0-beta.16",
    "solhint": "^3.3.6",
    "solidity-ast": "^0.4.25",
    "solidity-coverage": "^0.7.11"
  }
}
